<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3">Actions</th>
            <td>User</td>
        </tr>
    </thead>

    <tbody>
    <% @articles.each do |article| %>
        <tr>
           <td><%= article.title %></td>
           <td><%= article.description %></td>
           <td><%= link_to 'Show', article_path(article) %></td>
           <% if logged_in? && (article.user == current_user || current_user.admin?) %>
            <td><%= link_to 'Edit', edit_article_path(article)%></td>
            <td><%= button_to 'Delete', article_path(article), method: :delete, onclick: "return confirm('Are you sure?')" %></td>
           <% end %>


           <% if article.user %>
            <td><%= link_to article.user.username, user_path(article.user)  %></td>
           <% end %>
        </tr>
        <% end %>
    </tbody>
</table>

<%= link_to "Create new article", new_article_path, class: "dropdown-item" %>